# Services configuration for darwin-brew
# Generated by chezmoi based on machineConfig.features

daemons:
{{- if eq .machineConfig.platform "darwin-brew" }}
  - name: karabiner.driverkit.daemon
    label_prefix: org.pqrs
{{- end }}
{{- if .machineConfig.features.kanata }}
  - name: kanata
    copy_binary: true
    binary_name: kanata
    binary_dest: /usr/local/bin/kanata
    setup_dirs:
      - path: "/Library/Application Support/org.pqrs/tmp"
        mode: "1777"
{{- end }}

agents:
  - name: aerospace
  - name: syncthing
