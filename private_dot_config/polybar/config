[colors]
background = #1e1e2e
background-bar-1 = #ff1e1e2e
background-bar-2 = #ff11111b
background-bar-3 = #00000000
foreground = #CDD6F4
red-color = #f38ba8
mem-color = #f9e2af
blue-color = #74c7ec
darkblue-color = #89b4fa
bat-color = #a6e3a1
sep-color = #45475a
purple-color = #cba6f7

[bar/mainbar]
monitor = ${env:MONITOR}
width = 100%
height = 26
fixed-center = false
background-0 = ${colors.background-bar-1}
background-1 = ${colors.background-bar-2}
foreground = ${colors.foreground}
line-size = 2
border-size = 3
border-color = ${colors.background-bar-3}
radius = 8
padding = 1

font-0 = "Iosevka Nerd Font:size=10;2"
font-1 = "Roboto Mono:size=11:weight=bold;2"
font-2 = "Noto Sans:size=11;1"
font-3 = "FontAwesome:size=10"
font-4 = "Roboto Mono:size=9;2"

modules-left = badge SP ewmh SP prevsong play nextsong song SP xwindow
modules-right = pulseaudio-control-output pulseaudio-control-input SP battery0 SP battery1 SP network SP date SP
tray-position = right
tray-padding = 1
tray-maxsize = 24
cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label-maxlen = 20

[module/ewmh]
type = internal/xworkspaces
label-active = " %name% "
label-active-foreground = ${colors.foreground}
label-active-background = ${colors.background}
label-active-underline = ${colors.blue-color}
label-occupied = " %name% "
label-occupied-underline = ${colors.mem-color}
label-urgent = " %name% "
label-urgent-underline = ${colors.red-color}
label-empty = " %name% "
label-empty-foreground = ${colors.foreground}

[module/badge]
type = custom/text
format = " %{T3}%{T-} "
format-foreground = ${colors.foreground}
click-left = ~/.config/leftwm/themes/Epitaph/scripts/rofi/applist

[module/SP]
type = custom/text
format = " %{T2}%{T-} "
format-background = ${colors.background}
format-foreground = ${colors.sep-color}

[module/play]
type = custom/text
format = "%{T0}%{T-} "
format-foreground = ${colors.red-color}

[module/song]
type = custom/script
exec = ~/.config/leftwm/themes/Epitaph/scripts/songstatus
format = <label>
label = %output%
format-foreground = ${colors.purple-color}
exec-if = "playerctl -a status > /dev/null 2>&1"

[module/network]
type = internal/network
interface = wlp4s0
format-connected = <label-connected>
format-disconnected =  <label-disconnected>
label-connected =   %essid%
label-connected-foreground = ${colors.purple-color}
label-disconnected-foreground = ${colors.red-color}

[module/date]
type = internal/date
date = %a %d %b (%R)
format =  <label>
format-foreground = ${colors.darkblue-color}

[module/battery0]
type = internal/battery
battery = BAT0
adapter = AC
low-at = 20
full-at = 95

format-charging = <animation-charging>  <label-charging>
label-charging =  %percentage%%
format-charging-foreground = ${colors.foreground}
format-charging-background = ${colors.background}

format-discharging = <ramp-capacity>  <label-discharging>
label-discharging =   %percentage%%
format-discharging-foreground = ${colors.foreground}
format-discharging-background = ${colors.background}

format-low = <ramp-capacity>  <label-low>
label-low =  %percentage%%
label-low-foreground = ${colors.mem-color}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.bat-color}
format-full-foreground = ${colors.purple-color}
format-full-background = ${colors.background}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.bat-color}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.bat-color}
animation-charging-framerate = 500

