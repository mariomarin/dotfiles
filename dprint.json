{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "includes": [
    "**/*.{md,json,jsonc,toml,yml,yaml}"
  ],
  "excludes": [
    "**/node_modules",
    "**/.git",
    "**/target",
    "**/.devbox",
    "**/lazy-lock.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.17.8.wasm",
    "https://plugins.dprint.dev/json-0.19.4.wasm",
    "https://plugins.dprint.dev/toml-0.6.3.wasm"
  ],
  "markdown": {
    "lineWidth": 100,
    "textWrap": "always"
  },
  "json": {
    "indentWidth": 2
  },
  "toml": {
    "indentWidth": 2
  }
}