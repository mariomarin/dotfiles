{{- if eq .chezmoi.os "windows" -}}
{{- /* Get latest NixOS-WSL release version */ -}}
{{- $nixosWslRelease := gitHubLatestRelease "nix-community/NixOS-WSL" -}}
{{- $version := $nixosWslRelease.TagName -}}

# NixOS-WSL tarball for WSL setup
# Downloaded automatically on Windows systems
# Current version: {{ $version }}

["nixos.wsl"]
    type = "file"
    url = "https://github.com/nix-community/NixOS-WSL/releases/download/{{ $version }}/nixos.wsl"
    refreshPeriod = "720h"  # Refresh every 30 days
{{- end -}}
