# shellcheck shell=bash
# direnv configuration file - sourced, not executed
source_url "https://raw.githubusercontent.com/cachix/devenv/95f329d49a8a5289d31e0982652f7058a189bfca/direnvrc" "sha256-d+8cBpDfDBj41inrADaJt+bDWhOktwslgoP5YiGJ1v0="

use devenv

# Load environment files
# .env - permanent credentials (CF_API_TOKEN, CF_ACCOUNT_ID)
# .env.local - ephemeral credentials (BW_SESSION)
# .env.work - work-specific secrets (ATUIN_SYNC_ADDRESS, etc.) - NOT tracked in git
dotenv_if_exists .env
dotenv_if_exists .env.local
dotenv_if_exists .env.work
